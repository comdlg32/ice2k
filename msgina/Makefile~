.PHONY: clean uninstall install

CC = g++
C++ = g++

OS = `uname -s | tr '[a-z]' '[A-Z]'`
# OS = OPENBSD

CFLAGS = -Wall -c --std=c99 -D "OS_$(OS)"
CPPFLAGS = -Wall -c --std=c++98 -D "OS_$(OS)"
LDFLAGS = `fox-config --libs` -lctl32 -li2kbrn

PREFIX=/usr/local

SOURCES = ctrlaltdel.cpp
OBJECTS = ctrlaltdel.o
EXECUTABLE = ctrlaltdel

CPPFLAGS += `fox-config --cflags`

all: $(EXECUTABLE)

# link executable
$(EXECUTABLE): $(OBJECTS)
	$(CC) $(OBJECTS) -o $@ $(LDFLAGS)

clean:
	rm -f $(OBJECTS) $(EXECUTABLE)

install: $(EXECUTABLE)
	cp ctrlaltdel $(PREFIX)/bin/ctrlaltdel

uninstall:
	rm -f $(PREFIX)/bin/ctrlaltdel
