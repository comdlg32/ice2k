	FXDECLARE(I2KMenuButton)

	protected:
		I2KMenuButton(){}

	private:
		I2KMenuButton(const I2KMenuButton&);
		I2KMenuButton &operator=(const I2KMenuButton&);

	public:
		//long onPaint(FXObject*,FXSelector,void*);
            //void drawBorderRectangle(FXDCWindow&,FXint,FXint,FXint,FXint);
