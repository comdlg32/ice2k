  GtkMenu::horizontal-padding = 1
  GtkMenu::vertical-padding = 1
  GtkMenu::horizontal-offset = -6

  GtkScrolledWindow::scrollbar-spacing = 0
  GtkScrolledWindow::scrollbars-within-bevel = 1

  engine "redmond95" {}
}

class "GtkWidget" style "standard-default"

