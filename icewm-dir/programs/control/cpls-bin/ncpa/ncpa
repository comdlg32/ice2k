#!/bin/sh
cd $HOME/.icewm/programs/control/cpls-bin/ncpa
PLUG=$(~/.icewm/programs/common/random)
#./icons | yad \
#--listen --icons \
#--no-buttons \
#--width=400 --height=250 --item-width=70 \
#--text=" File    Edit    View    Favorites    Tools    Advanced    Help" \
#--title="Network and Dial-up Connections" --window-icon=network

cd $HOME/.icewm/programs/control/cpls-bin/ncpa
