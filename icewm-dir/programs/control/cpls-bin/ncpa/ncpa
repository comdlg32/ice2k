--listen --icons --plug=$PLUG --tabnum=2 --item-width=70 &
GTK2_RC_FILES="$HOME/.icewm/programs/control/webview" yad --no-buttons --borders=0 --plug=$PLUG --tabnum=1 --image="$HOME/.icewm/programs/control/cpls-bin/ncpa/webview.png"
